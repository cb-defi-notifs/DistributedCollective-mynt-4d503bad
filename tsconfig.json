{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "allowJs": true,
        "strict": true,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "outDir": "dist",
        "resolveJsonModule": true,
        "sourceMap": true,
        "declaration": true,
        "paths": {
            "@utils/*": ["test-utils/*"]
        },
        "baseUrl": ".",
        "rootDir": ".",
        "allowJs": true,
        "typeRoots": ["node_modules/@0x/typescript-typings/types", "node_modules/@types"]
    },
    "include": [
        "./scripts/**/*.js",
        "./scripts/**/*.ts",
        "./tests",
        "./tasks",
        "./types/generated",
        "./deployment/deploy",
        "./.eslintrc.js",
        "./deployment/helpers",
        "./hardhat/**/*.[ts|js]"
    ],
    "files": ["./hardhat.config.ts"]
}
